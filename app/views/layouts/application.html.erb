<!DOCTYPE html>
<html>
<head>
  <title>RecruitmentApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <a class="btn btn-navbar" data-toggle="collapse"
      data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">TapConnect</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Contacts", relationships_path %></li>
          <li><%= link_to "Prompts", prompts_path %></li>
          <li><%= link_to "Members", members_path %></li>
          <li><%= link_to "Ghosts", ghosts_path %></li>
          <li><%= link_to "Account", account_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Sign out", signout_path %></li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
